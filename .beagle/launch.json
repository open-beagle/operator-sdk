{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Go",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "remotePath": "",
      "program": "${workspaceRoot}/cmd/helm-operator/main.go",
      "args": [
        "run",
        "--watches-file=${workspaceRoot}/.vscode/watches.yaml"
      ],
      "env": {
        // "HTTP_PROXY": "http://127.0.0.1:8888",
        "KUBECONFIG": "${workspaceRoot}/.vscode/kubeconfig.yml"
      },
      "showLog": true
    }
  ]
}